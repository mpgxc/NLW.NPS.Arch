{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@Modules/*": ["Modules/*"],
      "@Core/*": ["Core/*"],
      "@Infra/*": ["Infra/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
